<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Losses" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="DateTextTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/date_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LossesTitleTheme">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseStatItemTheme">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:gravity">start</item>
    </style>
</resources>